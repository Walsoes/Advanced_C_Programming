{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo ${workspaceFolder}"
        },
        {
            "label": "CompTime",
            "type": "shell",
            "command": " ",
            "args": [
                "-f",
                ""
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Build all C src",
            "command": "gcc",
            "args": [
                "-gdwarf-2",
                "-O0",
                "${relativeFileDirname}/*${fileExtname}",
                "-o",
                "${relativeFileDirname}/../build-Debug/${fileBasenameNoExtension}.o",
                "-Wall",
                "-std=c99",
                "-static",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "compiler: /usr/bin/gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Build single C-file",
            "command": "/usr/bin/time",
            "args": [
                "-f",
                "Elapsed time: %E\nCPU usage: %P",
                "gcc",
                "${input:buildprompt}",
                "-gdwarf-2",
                "-O0",
                "${file}",
                "-o",
                "${relativeFileDirname}/../build-Debug/${fileBasenameNoExtension}.c.o",
                "-Wall",
                "-std=c99",
                "-static",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
                //"shell": {"args": []}
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/gcc",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run build",
            "type": "shell",
            "command": "./${relativeFileDirname}/${fileBasenameNoExtension}.o",
            "group": "none",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Complie and run single c-file",
            "type": "shell",
            "command": "./${relativeFileDirname}/../build-Debug/${fileBasenameNoExtension}.c.o",
            "group": "none",
            "dependsOn": "Build single C-file",
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "buildprompt",
            "type": "promptString",
            "description": "Enter extra debugging info: ''",
            "default": ""
        }
    ],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
            "regexp": "^(.*?):([0-9]+):([0-9]+):\\s+(error|warning|note):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        },
}
}